<div class="container px-4 py-3">
    <table class="table table-hover">
        <thead>
            <tr>
            <th>
                Nome
            </th>
            <th>
                Telefone
            </th>
            <th>
                Origem
            </th>
            <th>
                Data de contado
            </th>
            <th>
                Observação
            </th>
            <th>
                Ações
            </th>
        </tr>
        </thead>
        <tbody>
            {{#each data}}
                <tr>
                    <td>{{this.nome}}</td>
                    <td>{{this.telefone}}</td>
                    <td>{{this.origem}}</td>
                    <td>{{this.data_contato}}</td>
                    <td>{{this.observacao}}</td>
                    <td class="d-flex justify-content-center align-items-center gap-2"> 
                        <a  href="editar/{{this.id}}">
                            <img src="../assets/edit-icon.svg" alt="" width="24">
                        </a>
                        <a href="excluir/{{this.id}}">
                            <img src="../assets/delete-icon.svg" alt="" width="24">
                        </a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
